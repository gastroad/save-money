{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "build/",
    "target": "esnext",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "strict": true
}