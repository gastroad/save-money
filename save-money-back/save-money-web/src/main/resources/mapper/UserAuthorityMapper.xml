<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.savemoney.core.mapper.UserAuthorityMapper">

    <insert id="save" parameterType="com.savemoney.core.domain.UserAuthorityEntity">
        INSERT INTO USER_AUTHORITY (
            ID
            , AUTHORITY
        ) values (
            #{id}
            , "ROLE_USER"
        );
    </insert>

</mapper>